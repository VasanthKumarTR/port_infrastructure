# Port.io Infrastructure Configuration - DEVELOPMENT Environment
# This file contains development-specific configuration values
# Secrets should be provided via GitHub secrets, not hardcoded here

# Environment Configuration
environment = "dev"
team_email  = "dev@example.com"

# AWS Configuration (region only, secrets come from GitHub)
aws_region = "us-east-1"

# Port Configuration (base URL only, secrets come from GitHub)
port_base_url = "https://api.getport.io"

# Optional Configuration
enable_audit_logging     = false  # Disabled in dev for faster iteration
drift_detection_schedule = "0 2 * * 2"  # Weekly on Tuesday at 2 AM
sync_schedule           = "0 4 * * *"   # Daily at 4 AM

# Team Configuration
available_teams = [
  "platform",
  "backend",
  "frontend",
  "mobile",
  "data"
]

approval_recipients = [
  "dev@example.com"
]

github_organization = "VasanthKumarTR"
github_actions_repo = "port_infrastructure"

# Webhook URLs for actions (update these with your actual dev endpoints)
dora_webhook_url            = "https://dev-dora-metrics.example.com/webhook"
dora_collection_webhook_url = "https://dev-dora-collector.example.com/webhook"
port_webhook_url           = "https://dev-port-webhook.example.com/webhook"
github_actions_webhook_url  = "https://api.github.com/repos/VasanthKumarTR/port_infrastructure/dispatches"
